
{
  "appId": "com.qimaash.management",
  "productName": "نظام إدارة القماش",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "electron.js",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "public/favicon.ico",
      "to": "favicon.ico"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": "dmg",
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/favicon.ico"
  }
}
